# Bahlilfication Configuration
# Copy this file to .env.local and customize as needed

# Mosaic Settings
# Face tile size (smaller = more detail, larger = chunkier)
MOSAIC_BLOCK_SIZE=8

# Background pixelation (should be > MOSAIC_BLOCK_SIZE for contrast)
# Set this higher for very obvious pixelated background!
MOSAIC_BACKGROUND_BLOCK_SIZE=16

# Random jitter for organic look (0 = perfect grid, 3-5 = natural)
MOSAIC_JITTER=3

# Color Preservation
# true = exact input colors, false = enhanced vibrancy
STRICT_COLOR_PRESERVATION=true

# Output Settings
OUTPUT_FORMAT=png
OUTPUT_QUALITY=90

# Debug (set to true to see console logs with block sizes)
DEBUG=true

# File Limits
MAX_FILE_SIZE=10485760
SUPPORTED_FORMATS=image/jpeg,image/png,image/webp

